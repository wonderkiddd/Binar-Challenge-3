    <!-- cari mobil -->
    <section>
        <div class="box">
            
                <div class="col">
                    <form action="/cari-mobil">
                           
                                <div class="row align-items-lg-start">
                                    <div class="col ">
                                        <h6 class="card-title">Tipe Driver</h6>
                                        <select class="form-select mt-3" id="typeDriver" name="typeDriver">
                                            <option selected>Pilih Tipe Driver</option>
                                            <option value="true">Dengan Sopir</option>
                                            <option value="false">Tanpa Sopir (Lepas Kunci)</option>
                                        </select>
                                    </div>
                                    <div class="col ">
                                        <h6 class="card-title">Tanggal</h6>
                                        <div class="input-group mt-3">
                                            <input type="date" class="form-control" name="tanggal" id="tanggal"
                                                placeholder="Pilih Tanggal">
                                        </div>
                                    </div>
                                    <div class="col ">
                                        <h6 class="card-title">Waktu Jemput/Ambil</h6>
                                        <select class="form-select mt-3" name="waktu">
                                            <option selected>Pilih Waktu</option>
                                            <option value="1">08.00 WIB</option>
                                            <option value="2">09.00 WIB</option>
                                            <option value="3">10.00 WIB</option>
                                            <option value="4">11.00 WIB</option>
                                            <option value="5">12.00 WIB</option>
                                        </select>
                                    </div>
                                    <div class="col ">
                                        <h6 class="card-title">Jumlah Penumpang (Optional)</h6>
                                        <div class="input-group mt-3">
                                            <input type="number" class="form-control" name="penumpang"
                                                placeholder="Jumlah Penumpang">
                                            <i class="bi bi-people icon-jumlah-penumpang"></i>
                                        </div>
                                    </div>
                                    <div class="col mt-3">
                                        <button class="button-cari d-flex justify-content-center text-white" type="submit" id="cari-mobil-btn">Cari
                                            Mobil</button>
                                    </div>
                                </div>
                           
                    </form>
                </div>
          
        </div>
    </section>

    <!-- get mobil -->
    <section>
        <div class="container">
            <div class="row text" style="margin-left: 5%; margin-right: 5%;">

                <% if (filter.length > 0) { %>
                <!-- menampilkan data mobil -->
                <% filter.forEach(car => { %>
                <div class="col-4 mt-3">
                    <div class="card">
                        <img src="<%= car.image %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="font-card"><%= car.manufacture %>/ <%= car.model %></p>
                            <p class="card-text" style="font-size: 16px; font-weight: 700;">RP <%= car.rentPerDay %>
                                /hari</p>
                            <p class="font-card">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
                                eiusmod
                                tempor incididunt ut labore et dolore magna aliqua. </p>
                            <ul class="list-unstyled ">
                                <li class="font-card"> <img src="images/fi_users.png" alt="" class=" pe-3">
                                    <%= car.capacity %> Orang</li>
                                <li class="mt-3 font-card"> <img src="images/fi_settings.png" alt=""
                                        class=" pe-3"><%= car.transmission %></li>
                                <li class="mt-3 font-card"> <img src="images/fi_calendar.png" alt="" class=" pe-3">Tahun
                                    <%= car.year %></li>
                                <a href="#" class="btn btn-primary border-0 mt-3"
                                    style="background-color: #5CB85F; width: 100%;">Pilih Mobil</a>
                            </ul>
                        </div>
                    </div>
                </div>
                <% }) %>

                <% }else{ %>
                <h3 class="text-center">Tidak ada mobil!</h3>
                <% } %>
            </div>
        </div>
    </section>

